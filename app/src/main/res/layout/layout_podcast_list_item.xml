<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:minHeight="110dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <ImageButton
        android:id="@+id/podcast_list_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:padding="5dp" />

    <TextView
        android:id="@+id/podcast_list_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:minWidth="50dp"
        android:text="111"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/podcast_list_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/podcast_list_item_number"
        android:layout_toRightOf="@id/podcast_list_item_button"
        android:gravity="right"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/podcast_list_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/podcast_list_item_title"
        android:layout_below="@+id/podcast_list_item_title"
        android:layout_toRightOf="@id/podcast_list_item_button"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/podcast_list_item_status"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/podcast_list_item_number"
        android:layout_toRightOf="@id/podcast_list_item_description" />

</RelativeLayout>